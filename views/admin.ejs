<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Add Quiz Question</title>
 <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body class="bg-gray-100 min-h-screen flex flex-col items-center p-6">

  <h1 class="text-3xl font-bold mb-8 text-indigo-700">Add New Question</h1>

  <form method="POST" action="/admin" class="bg-white shadow-md rounded-lg p-6 w-full max-w-3xl space-y-6">
    <div>
      <label class="block mb-1 font-semibold text-gray-700" for="question_text">Question:</label>
      <textarea
        id="question_text"
        name="question_text"
        rows="3"
        required
        class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500"
        placeholder="Enter the question text"
      ></textarea>
    </div>

    <div>
      <label class="block mb-1 font-semibold text-gray-700" for="explanation">Explanation:</label>
      <textarea
        id="explanation"
        name="explanation"
        rows="3"
        required
        class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500"
        placeholder="Explain the correct answer"
      ></textarea>
    </div>

    <div>
      <label class="block mb-2 font-semibold text-gray-700">Options:</label>
      <div id="optionsContainer" class="space-y-3">
        <div class="flex items-center space-x-3">
          <input
            type="text"
            name="options"
            placeholder="Option text"
            required
            class="flex-grow border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500"
          />
          <label class="flex items-center space-x-1 cursor-pointer">
            <input type="radio" name="correct_option_index" value="0" required class="form-radio text-indigo-600" />
            <span class="text-gray-700 select-none">Correct</span>
          </label>
        </div>
      </div>
      <button
        type="button"
        onclick="addOptionField()"
        class="mt-3 bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-2 px-4 rounded shadow transition-colors"
      >
        Add Option
      </button>
    </div>

    <button
      type="submit"
      class="bg-green-600 hover:bg-green-700 text-white font-bold py-3 px-6 rounded shadow w-full"
    >
      Save Question
    </button>
  </form>

  <script>
    function addOptionField() {
      const container = document.getElementById('optionsContainer');
      const index = container.children.length;

      const div = document.createElement('div');
      div.classList.add('flex', 'items-center', 'space-x-3');

      div.innerHTML = `
        <input
          type="text"
          name="options"
          placeholder="Option text"
          required
          class="flex-grow border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500"
        />
        <label class="flex items-center space-x-1 cursor-pointer">
          <input type="radio" name="correct_option_index" value="${index}" required class="form-radio text-indigo-600" />
          <span class="text-gray-700 select-none">Correct</span>
        </label>
      `;
      container.appendChild(div);
    }
  </script>
</body>
</html>
